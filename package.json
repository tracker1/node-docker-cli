{
  "name": "@tracker1/docker-cli",
  "version": "1.0.4",
  "description": "Docker cli interface",
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tracker1/node-docker-cli.git"
  },
  "keywords": [
    "docker",
    "cli",
    "docker-machine"
  ],
  "author": "Michael J. Ryan <tracker1@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tracker1/node-docker-cli/issues"
  },
  "homepage": "https://github.com/tracker1/node-docker-cli#readme",
  "dependencies": {
    "cli-table-2-json": "^1.0.13",
    "dockermachine-cli-js": "^3.0.5",
    "lodash.camelcase": "^4.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@types/jest": "^25.2.1",
    "babel-jest": "^25.2.6",
    "babel-plugin-add-module-exports": "^1.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "esm": "^3.2.25",
    "glob": "^7.1.6",
    "jest": "^25.2.7",
    "jest-esm-transformer": "^1.0.0",
    "mssql": "^6.2.0",
    "prettier": "^2.0.2",
    "shelljs": "^0.8.3"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "parser": "babel",
    "jsxBracketSameLine": true
  },
  "eslintConfig": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "es2020": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": "error",
      "no-new-func": "off",
      "arrow-parens": 0
    }
  },
  "eslintIgnore": [
    "node_modules/*",
    "coverage/*",
    "dist/*",
    "scripts/*"
  ],
  "jest": {
    "verbose": true,
    "transform": {
      "\\.m?jsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/*.js",
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/scripts/"
    ]
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-modules-commonjs",
        {
          "allowTopLevelThis": true
        }
      ],
      "babel-plugin-add-module-exports"
    ]
  },
  "scripts": {
    "build": "babel src --out-dir dist",
    "postbuild": "node -r esm scripts/postbuild.js",
    "pretest": "eslint \"./**/*.js\"",
    "test": "jest --coverage --runInBand --no-cache",
    "lint": "eslint --fix \"./**/*.js\"",
    "publish-major": "npm version major && git push origin master && git push --tags",
    "publish-minor": "npm version minor && git push origin master && git push --tags",
    "publish-patch": "npm version patch && git push origin master && git push --tags"
  }
}
